<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name" />


    <Button
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_log"
        android:text="@string/action_settings"
        tools:ignore="ButtonStyle,RtlHardcoded" />

    <Button
        android:layout_marginStart="20dp"
        android:id="@+id/action_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_tree"
        android:text="@string/action_tree"
        tools:ignore="RtlHardcoded" />

    <Button
        android:layout_marginStart="40dp"
        android:id="@+id/action_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_prompt"
        android:text="@string/action_prompt"
        tools:ignore="ButtonStyle,RtlHardcoded" />
    <Button
        android:layout_marginStart="60dp"
        android:id="@+id/action_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_image"
        android:text="@string/action_image"
        tools:ignore="ButtonStyle,RtlHardcoded" />

    <TextView
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_image_summary" />

    <Button
        android:layout_marginStart="60dp"
        android:id="@+id/subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_subscription"
        android:text="@string/subscription_button"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription_summary" />

    <Button
        android:id="@+id/action_policy"
        android:drawableLeft="@drawable/ic_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_policy"
        tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,RtlHardcoded" />
    <Button
        android:id="@+id/action_create_account"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_create_account"
        tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,RtlHardcoded" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/menu_nai"
            android:minHeight="96dp"
            android:minWidth="96dp"
            android:gravity="top|left"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded" />
    </ScrollView>
</LinearLayout>

